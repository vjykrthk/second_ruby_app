<table summary="Users following/followers">
	<tr>
		<td class="main">
			<h1><%= @title %></h1>
			<% unless @users.empty? %>
				<ul class="users">
					<%= render @users %>
				</ul>
				<%= will_paginate(@users) %>
			<% end %>
		</td>
		<td class="sidebar round">
			<table>
				<tr>
					<td>
						<%= link_to gravatar_for(@user, :size => 30), @user %>
					</td>
					<td>
						<strong>Name: </strong><%= @user.name %></br>
						<strong>Url: </strong><%= link_to user_path(@user), @user %></br>
						<strong>Microposts: </strong><%= @users.count %>
					</td>
				</tr>
			</table>
			<%= render 'shared/stats' %>
			<% unless @users.empty? %>
				<% @users.each do |user| %>
					<%= link_to gravatar_for(user, :size => 30), user %>
				<% end %>
			<% end %>
		</td>
	</tr>
</table>