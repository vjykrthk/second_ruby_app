<% @user ||= current_user %>
<div>
<table summary="users following and followers stats">
<tr>
	<td>
		<a href ="<%= following_user_path(@user) %>"><span id="following">
			<%= @user.following.count %> following</span></a>
	</td>
	<td>
		<a href ="<%= followers_user_path(@user) %>"><span id="followers">
			<%= pluralize(@user.followers.count, "follower") %></span></a>
	</td>
</tr>
</table>
</div>